<resources>

    <!-- Base application theme. -->
    <style name="AppThemeActionBar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LabelView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorTOT</item>
        <item name="android:textSize">@dimen/NormalFontSize</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="BlueLabelView" parent="android:Widget.TextView">
        <item name="android:textColor">#3F51B5</item>
        <item name="android:textSize">@dimen/NormalFontSize</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MenuLabelView" parent="android:Widget.TextView">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/SmallFontSize</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#666666</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text_style</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/colorTOT</item>
        <item name="android:textSize">@dimen/NormalFontSize</item>
        <item name="android:textColorHint">#4d4d4d</item>
        <item name="android:layout_marginBottom">10dp</item>
        <!--<item name="android:textColor">#808080</item>
        <item name="android:layout_height">150dip</item>-->
    </style>

    <style name="TOTBlueButton" parent="android:Widget.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/NormalFontSize</item>
        <item name="android:background">#3F51B5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="TOTMenuBlueButton" parent="android:Widget.Button">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">@dimen/NormalFontSize</item>
        <item name="android:background">#3F51B5</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
    </style>

    <style name="LabelTitle" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/NormalFontSize</item>
        <item name="android:textColor">@color/colorTOT</item>
    </style>

    <style name="LabelDesc" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/SmallFontSize</item>
        <item name="android:textColor">@color/colorTOT</item>
    </style>

    <style name="LabelDescBlue" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/SmallFontSize</item>
        <item name="android:textColor">#3F51B5</item>
    </style>

</resources>
