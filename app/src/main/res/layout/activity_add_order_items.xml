<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="in.collectiva.tailoringordertracking.AddOrderItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAddOrderItemsOrderId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="1dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAddOrderItemsRowSpacing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="3dp" />

            <TextView
                android:id="@+id/txtAddOrderItemsDesc2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/LabelTitle" />

            <TextView
                android:id="@+id/txtAddOrderItemsDesc1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/LabelDesc" />

            <TextView
                android:id="@+id/txtAddOrderItemsDesc3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/LabelDescBlue" />

            <TextView
                android:id="@+id/txtAddOrderItemsDesc4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                style="@style/LabelDesc" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAddOrderItems"
            style="@style/TOTBlueButton"
            android:layout_gravity="right"
            android:text="Add Order Detail"
            android:layout_margin="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lstAddOrderItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="1dp"
                android:divider="#d9ddf2"
                android:layout_margin="5dp"></ListView>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="4dp" />

            <View
                android:layout_width="140dp"
                android:layout_height="0.7dp"
                android:background="#6a6a6b"
                android:layout_gravity="right"
                android:paddingRight="40dp" />-->

            <TextView
                android:id="@+id/txtAddOrderItemsNoRecords"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                style="@style/LabelView" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
