<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.collectiva.tailoringordertracking.AddOrderItems">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtAddOrderItemsOrderId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="1dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAddOrderItemsRowSpacing"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="3dp" />

            <TextView
                android:id="@+id/txtAddOrderItemsDesc2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/NormalFontSize" />

            <TextView
                android:id="@+id/txtAddOrderItemsDesc1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/SmallFontSize" />

            <TextView
                android:id="@+id/txtAddOrderItemsDesc3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="@dimen/SmallFontSize" />

        </LinearLayout>

        <Button
            android:id="@+id/btnAddOrderItems"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Add Order Detail"
            android:textSize="@dimen/NormalFontSize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lstAddOrderItems"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:dividerHeight="1dp"></ListView>

            <TextView
                android:id="@+id/txtAddOrderItemsNoRecords"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center" />

        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
