<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.collectiva.tailoringordertracking.Order">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <Button
            android:id="@+id/btnAddOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Order"
            android:textSize="@dimen/NormalFontSize" />

        <Spinner
            android:id="@+id/sprItem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="15dp"
            tools:ignore="SpUsage" />

        <!--<TextView
            android:id="@+id/tvQty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Qty :"/>-->

        <EditText
            android:id="@+id/txtQty"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginBottom="5dp"
            android:background="#aaaaaa"
            android:ems="10"
            android:hint="Enter Qty"
            android:inputType="number"
            android:textColor="#000000"
            android:textColorHint="#676767"
            android:textSize="15dp"
            tools:ignore="HardcodedText,SpUsage" />

        <!--<DatePicker
            android:id="@+id/dtOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:calendarViewShown="true"
            android:spinnersShown="false"
            android:datePickerMode="calendar"/>-->

        <!--<TextView
            android:id="@+id/tvDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Order Date :" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/txtDate"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:background="#aaaaaa"
                android:enabled="false"
                android:hint="Enter Order Date"
                android:inputType="date"
                android:textColor="#000000"
                android:textColorHint="#676767"
                android:textSize="15dp"
                tools:ignore="HardcodedText,SpUsage" />

            <ImageButton
                android:id="@+id/imgDate"
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:contentDescription="Select Date"
                app:srcCompat="@android:drawable/ic_menu_my_calendar"
                tools:ignore="HardcodedText" />

            <ImageButton
                android:id="@+id/imgOrderItemPlus"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="Plus"
                app:srcCompat="@android:drawable/ic_menu_add" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Rate :"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Amount :"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
