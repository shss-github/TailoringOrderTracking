<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="in.collectiva.tailoringordertracking.OrderEntry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOrderDetail"
            style="@style/TOTBlueButton"
            android:text="Add Order"
            android:layout_margin="5dp" />

        <ListView
            android:id="@+id/lstOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp"
            android:divider="#d9ddf2"
            android:padding="10dp"></ListView>

        <TextView
            android:id="@+id/txtOrderEntryNoRecords"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            style="@style/LabelView" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
