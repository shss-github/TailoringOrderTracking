<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.collectiva.tailoringordertracking.OrderEntry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Order Detail" android:textSize="@dimen/NormalFontSize" />

        <ListView
            android:id="@+id/lstOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:dividerHeight="1dp"
            android:padding="10dp"></ListView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
